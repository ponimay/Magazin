<Page x:Class="WpfApp3.dobav"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница добавления">

    <Grid Background="Khaki">
        <TextBox HorizontalAlignment="Left" Margin="76,52,0,0" TextWrapping="Wrap" Text="{Binding ProductName}" VerticalAlignment="Top" Width="377" Height="44"/>
        <Button Name="btrnn" Click="btrnn_Click" Content="Добавить" HorizontalAlignment="Left" Margin="511,152,0,0" VerticalAlignment="Top" Height="54" Width="118" FontFamily="Bahnschrift Condensed" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="76,23,0,0" TextWrapping="Wrap" Text="Добавить продукт" FontSize="15" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="76,234,0,0" TextWrapping="Wrap" Text="{Binding Price}" VerticalAlignment="Top" Width="377" Height="50"/>
        <TextBlock HorizontalAlignment="Left" Margin="76,205,0,0" TextWrapping="Wrap" Text="Добавить цену" FontSize="15" VerticalAlignment="Top"/>

    </Grid>
</Page>
