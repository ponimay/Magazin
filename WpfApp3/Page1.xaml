        <PasswordBox x:Name ="PassBox"  HorizontalAlignment="Center" Margin="0,221,0,0" VerticalAlignment="Top" Width="200" Height="22"/>
        <TextBlock x:Name="cap"  HorizontalAlignment="Left" Margin="295,256,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="205" RenderTransformOrigin="0.5,0.5" Height="26"/>
        <TextBox x:Name="captxt" HorizontalAlignment="Center" Margin="0,290,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="142" Height="18"/>
        <TextBlock HorizontalAlignment="Left" FontSize="14" Margin="219,179,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" FontSize="14" Margin="225,223,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top"/>
    </Grid>
</Page>
